<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.lenovo.viewpagerdemo.activities.ShopDetailsActivity"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F1EDEE">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="海鲜先生（北国店）"
                android:textAlignment="center"
                android:textSize="24dp" />
            <ImageView
                android:id="@+id/shop_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignStart="@+id/shop_title"
                android:layout_below="@+id/shop_title"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_img" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/zhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张"
                    />
            </LinearLayout>
            <!--图片下面的功能栏-->
            <LinearLayout
                android:id="@+id/below_shop_img"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/shop_img"
                android:layout_margin="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="6dp"
                    android:baseline="21dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/shophour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="营业至21:00"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_wifi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:baseline="25dp"
                    android:src="@drawable/wifi" />

                <TextView
                    android:id="@+id/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="WIFI"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_car"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="20dp"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/park"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="停车场"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_right0"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="28dp"
                    android:baseline="18dp"
                    android:src="@drawable/arrow" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:background="#000" />

                <ImageView
                    android:id="@+id/img_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:baseline="20dp"
                    android:src="@drawable/heart"

                    />
            </LinearLayout>

            <View
                android:id="@+id/verline_first"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_below="@+id/below_shop_img"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#000" />
            <!--地址栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/verline_first"
                android:layout_margin="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shop_address"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/address" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="7"
                    android:text="北国商城9楼西南角"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/phone" />
            </LinearLayout>
        </RelativeLayout>
        <!--secondRelativeLayout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff">
            <!--排队取号区域-->
            <LinearLayout
                android:id="@+id/below_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="1dp">
                    <RelativeLayout
                        android:id="@+id/renu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/linborder"
                        android:layout_margin="3dp"
                        >

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小桌"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:paddingLeft="50dp"
                            android:paddingTop="3dp"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView"
                            android:text="1-4人"
                            android:textSize="15dp"
                            android:paddingLeft="50dp" />
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正在排队"
                            android:textSize="16dp"
                            android:layout_toRightOf="@+id/textView"
                            android:paddingLeft="55dp"
                            android:layout_marginTop="13dp"
                            />
                        <TextView
                            android:id="@+id/numbe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView2"
                            android:layout_toEndOf="@+id/textView3"
                            android:text="8"
                            android:textColor="#FF4040"
                            android:textSize="20dp"
                            android:layout_alignBaseline="@id/textView3"/>
                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="桌"
                            android:layout_toRightOf="@+id/numbe"
                            android:textSize="16dp"
                            android:layout_alignBaseline="@id/numbe"/>
                            />
                        <Button
                            android:id="@+id/getnum"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_shape2"
                            android:text="取号"
                            android:textSize="15dp"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            />
                        <Button
                            android:id="@+id/cancelNum"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_shape2"
                            android:text="取消排队"
                            android:textSize="15dp"
                            android:textColor="#FFFFFF"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/renu3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linborder"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中桌"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingLeft="50dp"
                        android:paddingTop="3dp"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:text="5-6人"
                        android:textSize="15dp"
                        android:paddingLeft="50dp" />
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在排队"
                        android:textSize="16dp"
                        android:layout_toRightOf="@+id/textView5"
                        android:paddingLeft="55dp"
                        android:layout_marginTop="13dp"
                        />
                    <TextView
                        android:id="@+id/numbe2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView6"
                        android:layout_toEndOf="@+id/textView7"
                        android:text="8"
                        android:textColor="#FF4040"
                        android:textSize="20dp"
                        android:layout_alignBaseline="@id/textView7"/>
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="桌"
                        android:layout_toRightOf="@+id/numbe2"
                        android:textSize="16dp"
                        android:layout_alignBaseline="@id/numbe2"/>
                    />

                    <Button
                        android:id="@+id/getnum2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_shape2"
                        android:text="取号"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        />
                    <Button
                        android:id="@+id/cancelNum2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_shape2"
                        android:text="取消排队"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/renu4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/linborder"
                    android:layout_margin="3dp"
                    >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大桌"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingLeft="50dp"
                        android:paddingTop="3dp"/>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView9"
                        android:text="7人以上"
                        android:textSize="15dp"
                        android:paddingLeft="50dp" />
                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在排队"
                        android:textSize="16dp"
                        android:layout_toRightOf="@+id/textView9"
                        android:paddingLeft="55dp"
                        android:layout_marginTop="13dp"
                        />
                    <TextView
                        android:id="@+id/numbe3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView10"
                        android:layout_toEndOf="@+id/textView11"
                        android:text="8"
                        android:textColor="#FF4040"
                        android:textSize="20dp"
                        android:layout_alignBaseline="@id/textView11"/>
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="桌"
                        android:layout_toRightOf="@+id/numbe3"
                        android:textSize="16dp"
                        android:layout_alignBaseline="@id/numbe3"/>
                    />
                    <Button
                        android:id="@+id/getnum3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_shape2"
                        android:text="取号"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        />
                    <Button
                        android:id="@+id/cancelNum3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_shape2"
                        android:text="取消排队"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/verline_second"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_below="@+id/below_first"
                android:background="#000"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
            <!--预约区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verline_second"
                android:orientation="vertical">
                <!--预约第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/arrow_down"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow_down"
                        android:layout_margin="1dp"
                        android:layout_marginLeft="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约"
                        android:textSize="14dp"
                        android:layout_marginLeft="4dp"

                        />
                    <com.example.lenovo.viewpagerdemo.TextViewBorder
                        android:id="@+id/txt_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="14dp"
                        android:text="  有包房  "
                        android:layout_marginLeft="4dp"
                        app:borderColor="#EA9F4E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="免排队，到店即就餐"
                        android:textSize="14dp"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/arrow_right1"
                        android:layout_width="18dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow"
                        android:baseline="18dp"
                        android:layout_marginRight="2dp"
                        />
                </LinearLayout>
                <!--预约第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今天"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="明天"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/after_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="后天"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="3">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="更多"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#000"/>
                <!--预约第三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">
                    <Button
                        android:id="@+id/btn0"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_shape"
                        android:text="17:00"
                        android:textColor="#fff"
                        android:layout_weight="2"/>
                    <Button
                        android:id="@+id/btn1"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_shape"
                        android:text="17:30"
                        android:textColor="#fff"
                        android:layout_weight="2"/>
                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/btn_shape"
                        android:text="18:00"
                        android:textColor="#fff"
                        android:layout_weight="2"/>
                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/btn_shape"
                        android:text="18:30"
                        android:textColor="#fff"
                        android:layout_weight="2"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow"
                        android:baseline="12dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--thirdRelativeLayout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#fff">
            <LinearLayout
                android:id="@+id/comment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/comment"
                    android:layout_marginLeft="4dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="评论"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_margin="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_title">
                <ListView
                    android:id="@+id/comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >
                </ListView>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
