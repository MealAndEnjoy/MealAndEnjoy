<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg5">

    <FrameLayout
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#90FFEFD5">

        <ImageButton
            android:id="@+id/register_imgbtn"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="#0000"
            android:src="@mipmap/retn_left" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="注册"
            android:textAlignment="center"
            android:textColor="#E5E5E5"
            android:textSize="32dp" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/register_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="35dp">
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="  用户名"
            android:background="@drawable/btn_shape3"
            android:textSize="22sp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_shape3"
            android:layout_marginTop="15dp"
            android:hint="  密码"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/edt_repassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_shape3"
            android:layout_marginTop="15dp"
            android:hint="  确认密码"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_shape3"
            android:layout_marginTop="15dp"
            android:hint="  手机号码"
            android:textSize="22sp"
            android:paddingLeft="10dp"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="注册"
            android:background="@drawable/btn_shape5"
            android:textColor="@color/color_white"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/old_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号登录"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:textColor="#0000E3"/>
    </LinearLayout>
</LinearLayout>
