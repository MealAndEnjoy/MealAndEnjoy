<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="170dp"
        android:layout_height="105dp"
        android:layout_margin="10dp"
        android:src="@mipmap/shop1"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_toRightOf="@id/iv_shop"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" >
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="春园烤肉王"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_shop_star"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"
            android:layout_below="@id/tv_shop_name"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_shop_star"
            android:layout_below="@id/tv_shop_name"
            android:text="￥"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_shop_price2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_shop_price"
            android:layout_below="@id/tv_shop_name"
            android:text="50"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_shop_price3"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_shop_price2"
            android:layout_below="@id/tv_shop_name"
            android:text="/人"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_shop_star"
            android:text="自助餐"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_shop_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.8km"
            android:layout_below="@id/iv_shop_star"
            android:layout_toRightOf="@id/tv_shop_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv_shop_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"
            android:layout_below="@id/tv_shop_type"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_waitNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需等待"
            android:layout_below="@id/tv_shop_type"
            android:layout_toRightOf="@id/iv_shop_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_waitNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:layout_below="@id/tv_shop_type"
            android:layout_toRightOf="@+id/tv_waitNum"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#FF0000"/>
        <TextView
            android:id="@+id/tv_waitNum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桌"
            android:layout_below="@id/tv_shop_type"
            android:layout_toRightOf="@+id/tv_waitNum2"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </RelativeLayout>
</LinearLayout>
