<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.viewpagerdemo.activities.SelectStateActivity">
    <RelativeLayout
        android:id="@+id/shop_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        >
        <ImageButton
            android:id="@+id/imgbtn_rtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/l"
            android:layout_margin="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择商店状态"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textAlignment="center"/>
    </RelativeLayout>
    <View
        android:id="@+id/shop_login_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/shop_login_title"
        android:background="#000"
        android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/tv_shop_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/shop_login_title"
        android:layout_alignStart="@+id/shop_login_title"
        android:layout_below="@+id/shop_login_title"
        android:layout_marginTop="37dp"
        android:text="您当前的状态是:"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shop_login_title"
        android:layout_alignStart="@+id/shop_login_title"
        android:layout_below="@+id/tv_shop_state"
        android:layout_marginTop="30dp"
        android:text="请选择您的状态:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_info"
        android:layout_alignStart="@+id/tv_info"
        android:layout_below="@+id/tv_info"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="31dp"></Spinner>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_submit"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginTop="50dp"
        android:text="确定"
        android:layout_marginLeft="20dp"
        android:background="#66CC99"
        android:textSize="20sp"/>
</RelativeLayout>
