<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.viewpagerdemo.activities.UserShopCollectionActivity">
    <RelativeLayout
        android:id="@+id/user_collection_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        >
        <ImageButton
            android:id="@+id/imgbtn_rtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/l"
            android:layout_margin="1dp"/>
        <TextView
            android:id="@+id/tv_user_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textAlignment="center"/>
    </RelativeLayout>
    <!--粗横线tc_3-->
    <TextView
        android:id="@+id/tc_1"
        android:layout_below="@id/user_collection_title"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#f3eded">
    </TextView>
    <!--粗横线结束-->
    <ListView
        android:id="@+id/lv_user_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tc_1"></ListView>
</RelativeLayout>
