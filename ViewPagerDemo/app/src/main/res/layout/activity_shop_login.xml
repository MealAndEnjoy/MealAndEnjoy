<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.viewpagerdemo.activities.ShopLoginActivity">
    <RelativeLayout
        android:id="@+id/shop_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        >
        <ImageButton
            android:id="@+id/imgbtn_rtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/l"
            android:layout_margin="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商家登录"
            android:textSize="26sp"
            android:textAlignment="center"/>
    </RelativeLayout>
    <View
        android:id="@+id/shop_login_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/shop_login_title"
        android:background="#000"
        android:layout_margin="4dp"/>

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shop_login_title"
        android:layout_below="@+id/shop_login_line"
        android:layout_marginStart="34dp"
        android:layout_marginTop="141dp"
        android:src="@mipmap/head" />

    <EditText
        android:id="@+id/edt_shop_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入商店用户名" />

    <ImageView
        android:id="@+id/img_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img_head"
        android:layout_below="@+id/edt_shop_username"
        android:layout_marginTop="51dp"
        android:src="@mipmap/psw" />

    <EditText
        android:id="@+id/edt_shop_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_psw"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:hint="请输入商店密码" />

    <Button
        android:id="@+id/btn_shop_login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_shop_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#66CC99"
        android:text="登录" />


</RelativeLayout>
