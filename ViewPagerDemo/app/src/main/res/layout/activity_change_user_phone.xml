<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.viewpagerdemo.activities.ChangeUsernameActivity">
    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

        <ImageButton
            android:id="@+id/imgbtn_rtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="#00000000"
            android:src="@mipmap/l" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgbtn_rtn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="修改手机号码"
            android:textSize="30sp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="手 机 号："/>
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="13731169692"/>
        <TextView
            android:id="@+id/tv_change_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_phone"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="请修改您的手机号码！"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_change_info"
            android:layout_marginTop="10dp"
            android:text="确定"
            android:layout_marginLeft="20dp"
            android:background="#66CC99"
            android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>
